#cloud-config

coreos:
  update:
    group: beta
    reboot-strategy: off
  units:
    - name: etcd2.service
      command: start
      enable: true
      content: |
        [Unit]
        Description=etcd2 standalone mode
        After=docker.service
        Requires=docker.service

        [Service]
        TimeoutStartSec=0
        User=core
        ExecStartPre=-/usr/bin/docker kill etcd2
        ExecStartPre=-/usr/bin/docker rm etcd2
        ExecStartPre=/usr/bin/docker pull quay.io/coreos/etcd:v2.3.1
        ExecStart=/usr/bin/docker run \
          --name etcd2 \
          -p 2380:2380 \
          -p 2379:2379 \
          quay.io/coreos/etcd:v2.3.1 \
            --name etcd0 \
            --advertise-client-urls http://$private_ipv4:2379 \
            --listen-client-urls http://0.0.0.0:2379 \
            --initial-advertise-peer-urls http://$private_ipv4:2380 \
            --listen-peer-urls http://0.0.0.0:2380 \
            --initial-cluster-token etcd-cluster-1 \
            --initial-cluster etcd0=http://$private_ipv4:2380 \
            --initial-cluster-state new
        ExecStop=/usr/bin/docker stop etcd2

        [Install]
        WantedBy=multi-user.target
    - name: settimezone.service
      command: start
      content: |
        [Unit]
        Description=Set the timezone

        [Service]
        ExecStart=/usr/bin/timedatectl set-timezone <%= ENV["TIMEZONE"] %>
        RemainAfterExit=yes
        Type=oneshot
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
write_files:
  - path: /etc/ssh/sshd_config
    permissions: "0600"
    owner: root:root
    content: |
      # Use most defaults for sshd configuration.
      UsePrivilegeSeparation sandbox
      Subsystem sftp internal-sftp

      PermitRootLogin no
      PasswordAuthentication no
      ChallengeResponseAuthentication no
  - path: /etc/ntp.conf
    content: |
      # Common pool
      server 0.pool.ntp.org
      server 1.pool.ntp.org
      server 2.pool.ntp.org
      server 3.pool.ntp.org

      # - Allow only time queries, at a limited rate.
      # - Allow all local queries (IPv4, IPv6)
      restrict default nomodify nopeer noquery limited kod
      restrict 127.0.0.1
      restrict [::1]
